# Sparklio Docker Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ==============================================
# PostgreSQL Configuration
# ==============================================
POSTGRES_DB=sparklio
POSTGRES_USER=sparklio
POSTGRES_PASSWORD=change-this-secure-password-123
POSTGRES_PORT=5432

# ==============================================
# Redis Configuration
# ==============================================
REDIS_PASSWORD=change-this-redis-password-456
REDIS_PORT=6379

# ==============================================
# MinIO Configuration
# ==============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-this-minio-password-789
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_DOMAIN=minio.sparklio.local

# ==============================================
# pgAdmin Configuration (Optional)
# ==============================================
PGADMIN_EMAIL=admin@sparklio.local
PGADMIN_PASSWORD=change-this-pgadmin-password-abc
PGADMIN_PORT=5050

# ==============================================
# Network Configuration
# ==============================================
# Tailscale hostname of Mac mini
MAC_MINI_HOSTNAME=sparklio-macmini

# Desktop GPU worker hostname
DESKTOP_HOSTNAME=sparklio-desktop

# Laptop hostname
LAPTOP_HOSTNAME=sparklio-laptop

# ==============================================
# Application Configuration
# ==============================================
# Environment (development, staging, production)
ENVIRONMENT=development

# API Server Port (for backend FastAPI)
API_SERVER_PORT=8000

# Frontend Dev Server Port
FRONTEND_PORT=3000

# Celery Worker Concurrency
CELERY_WORKER_CONCURRENCY=4

# ==============================================
# External Services (Optional)
# ==============================================
# OpenAI API Key
OPENAI_API_KEY=

# Google Gemini API Key
GOOGLE_API_KEY=

# Anthropic Claude API Key
ANTHROPIC_API_KEY=

# ==============================================
# Security & Secrets
# ==============================================
# JWT Secret for authentication
JWT_SECRET=change-this-jwt-secret-key-xyz

# Session Secret
SESSION_SECRET=change-this-session-secret-def

# ==============================================
# Monitoring & Logging (Optional)
# ==============================================
# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable performance monitoring
ENABLE_MONITORING=false

# ==============================================
# Notes
# ==============================================
# 1. Replace all "change-this-*" passwords with strong random passwords
# 2. Generate strong passwords: openssl rand -base64 32
# 3. Keep .env file secure and never commit to version control
# 4. Use different passwords for each service
# 5. For production, use proper secrets management (e.g., HashiCorp Vault)
