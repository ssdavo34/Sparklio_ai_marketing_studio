# ============================================================================
# Sparklio Backend Environment Variables - Mac Mini Production (Example)
# ============================================================================
# 이 파일을 .env.mini로 복사하고 실제 값으로 교체하세요
# cp .env.mini.example .env.mini
# ============================================================================

# Application Settings
ENV=production
DEBUG=false
GENERATOR_MODE=live
API_PORT=8000
ADMIN_PORT=8001

# ============================================================================
# Database Configuration (Docker 네트워크 내부)
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=sparklio
POSTGRES_USER=sparklio
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD  # ⚠️ 실제 비밀번호로 교체
DATABASE_URL=postgresql+psycopg2://sparklio:CHANGE_THIS_PASSWORD@postgres:5432/sparklio

# ============================================================================
# Redis Configuration (Docker 네트워크 내부)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD  # ⚠️ 실제 비밀번호로 교체
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@redis:6379/0

# ============================================================================
# MinIO Configuration (Docker 네트워크 내부)
# ============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=CHANGE_THIS_PASSWORD  # ⚠️ 실제 비밀번호로 교체
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=sparklio-assets

# ============================================================================
# GPU Worker Configuration (Desktop - Tailscale IP)
# ============================================================================
OLLAMA_BASE_URL=http://100.120.180.42:11434
COMFYUI_BASE_URL=http://100.120.180.42:8188
# NANOBANANA_BASE_URL=http://100.120.180.42:8080  # 사용 시 주석 해제

# ============================================================================
# LLM API Keys (필수 - 실제 키로 교체)
# ============================================================================
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GOOGLE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================================================
# LLM Model Configuration
# ============================================================================
DEFAULT_LLM_MODEL=gpt-4o-mini
GEMINI_TEXT_MODEL=gemini-2.5-flash
CLAUDE_MODEL=claude-3-sonnet-20240229
OLLAMA_MODEL=llama3.1

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://100.123.51.5:3000","http://100.120.180.42:3000"]

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/sparklio.log

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY  # ⚠️ 랜덤 시크릿 키로 교체
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_JWT_KEY  # ⚠️ 랜덤 JWT 키로 교체
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30